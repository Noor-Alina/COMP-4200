<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_two"
    tools:context=".demoHomePage">

    <TextView
        android:id="@+id/surveyTitleText"
        android:layout_width="323dp"
        android:layout_height="66dp"
        android:text="Main Menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        android:textAlignment="center"
        android:textSize="40sp"/>

    <LinearLayout
        android:id="@+id/menuOptionsContainer"
        android:layout_width="389dp"
        android:layout_height="581dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.793">

        <Button
            android:id="@+id/createSurveyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create A Survey"
            android:padding="20dp"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/surveyResponsesBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Survey Responses"
            android:padding="20dp"
            android:textSize="15sp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>