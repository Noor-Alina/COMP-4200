<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg_gold"
    tools:context=".UserMenu">


    <LinearLayout
        android:id="@+id/menuOptionsContainer"
        android:layout_width="339dp"
        android:layout_height="638dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Welcome home!"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/createSurveyBtn"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:padding="20dp"
            android:text="Create New Survey"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/yourSurveysTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Your Surveys"
            android:textSize="26sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:id="@+id/yourSurveysScrollView"
            android:layout_width="match_parent"
            android:layout_height="188dp"


            android:contentDescription="scroll view for user surveys">

            <LinearLayout
                android:id="@+id/yourSurveysLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <TextView
            android:id="@+id/otherSurveysTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Other Surveys"
            android:textSize="26sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:id="@+id/otherSurveysScrollView"
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:contentDescription="scroll view for other surveys">

            <LinearLayout
                android:id="@+id/otherSurveysLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </HorizontalScrollView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
