<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_two"
    tools:context=".UserMenu">


    <LinearLayout
        android:id="@+id/menuOptionsContainer"
        android:layout_width="375dp"
        android:layout_height="640dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome home!"
            android:textSize="34sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/createSurveyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Create A Survey"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/yourSurveysTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Your Surveys"
            android:textSize="26sp"/>

        <ScrollView
            android:id="@+id/yourSurveysScrollView"
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:contentDescription="scroll view for user surveys">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <TextView
            android:id="@+id/otherSurveysTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Other Surveys"
            android:textSize="26sp"/>

        <ScrollView
            android:id="@+id/otherSurveysScrollView"
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:contentDescription="scroll view for other surveys">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>