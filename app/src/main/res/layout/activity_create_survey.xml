<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg_gold">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Survey Title -->
        <EditText
            android:id="@+id/survey_title"
            android:layout_width="373dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:autofillHints="title"
            android:inputType="text"
            android:text=""
            android:hint="@string/survey_title"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Survey Description -->
        <EditText
            android:id="@+id/survey_description"
            android:layout_width="372dp"
            android:layout_height="91dp"
            android:layout_marginBottom="16dp"
            android:autofillHints="description"
            android:inputType="text"
            android:text=""
            android:hint="@string/survey_description"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/numQuestions"
            android:layout_width="371dp"
            android:layout_height="77dp"
            android:autofillHints="questions amount"
            android:ems="10"
            android:inputType="number"
            android:text=""
            android:hint="@string/num_questions"
            android:textSize="16sp" />

        <Button
            android:id="@+id/surveyCreateBtn"
            android:layout_width="380dp"
            android:layout_height="81dp"
            android:textSize="20dp"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:text="Create Survey" />


    </LinearLayout>
</ScrollView>
