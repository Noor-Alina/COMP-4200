<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/questions_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg_gold"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/questions_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/survey_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Survey Title Here"
            android:gravity="center_horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"/>

        <!-- Nested LinearLayout for question cards -->
        <LinearLayout
            android:id="@+id/question_cards_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Question cards will be added here -->
        </LinearLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/submit_survey_button"
            android:layout_width="211dp"
            android:layout_height="62dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:text="Submit Survey" />

        <Button
            android:id="@+id/backToMenu"
            android:layout_width="209dp"
            android:layout_height="62dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:text="Back to menu" />
    </LinearLayout>

</ScrollView>
